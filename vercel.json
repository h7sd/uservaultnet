{
  "version": 2,
  "buildCommand": "npm install && npm run build",
  "devCommand": "php artisan serve --host=0.0.0.0 --port=$PORT",
  "installCommand": "npm install && composer install --no-dev --optimize-autoloader",
  "framework": null,
  "outputDirectory": "public",
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/build/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "VITE_JS_APP_BUILD_NUMBER": "10"
  },
  "build": {
    "env": {
      "NODE_VERSION": "18"
    }
  }
}
