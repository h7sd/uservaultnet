{
  "phases": {
    "setup": {
      "nixPkgs": ["php82", "php82Packages.composer", "nodejs_18", "nodePackages.npm"]
    },
    "install": {
      "cmds": [
        "composer install --optimize-autoloader --no-dev --no-interaction --prefer-dist --ignore-platform-req=ext-pcntl --ignore-platform-req=ext-posix",
        "npm ci"
      ]
    },
    "build": {
      "cmds": [
        "npm run build"
      ]
    }
  },
  "start": {
    "cmd": "php artisan migrate --force && php artisan serve --host=0.0.0.0 --port=$PORT"
  }
}
